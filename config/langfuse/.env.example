# Langfuse v3 Environment Variables
# Copy this file to .env and fill in the values

# PostgreSQL Database URL (external RDS)
DATABASE_URL=postgresql://user:password@host:5432/langfuse?sslmode=require

# Langfuse Security Keys - Generate these with the commands shown
# openssl rand -base64 32
NEXTAUTH_SECRET=
# openssl rand -base64 16
SALT=
# openssl rand -hex 32
ENCRYPTION_KEY=

# ClickHouse Password - openssl rand -base64 16 | tr -dc "a-zA-Z0-9"
CLICKHOUSE_PASSWORD=

# Redis Password - openssl rand -base64 16 | tr -dc "a-zA-Z0-9"
REDIS_AUTH=

# MinIO Password - openssl rand -base64 16 | tr -dc "a-zA-Z0-9"
MINIO_PASSWORD=

# Public URL for Langfuse
NEXTAUTH_URL=https://langfuse.example.com

# Keycloak SSO (optional - set to false for local auth)
AUTH_DISABLE_USERNAME_PASSWORD=true
AUTH_DISABLE_SIGNUP=true
AUTH_KEYCLOAK_CLIENT_ID=langfuse
AUTH_KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret
AUTH_KEYCLOAK_ISSUER=https://auth.example.com/realms/your-realm
AUTH_KEYCLOAK_ALLOW_ACCOUNT_LINKING=true

# Headless Initialization - auto-create org, project, and API keys
LANGFUSE_INIT_ORG_ID=aiportal
LANGFUSE_INIT_ORG_NAME=AI Portal
LANGFUSE_INIT_PROJECT_ID=openwebui
LANGFUSE_INIT_PROJECT_NAME=Open WebUI
LANGFUSE_INIT_PROJECT_PUBLIC_KEY=lf_pk_aiportal_openwebui
LANGFUSE_INIT_PROJECT_SECRET_KEY=lf_sk_aiportal_openwebui_secret
LANGFUSE_INIT_USER_EMAIL=admin@example.com
LANGFUSE_INIT_USER_NAME=Admin
LANGFUSE_INIT_PASSWORD=your-secure-password
